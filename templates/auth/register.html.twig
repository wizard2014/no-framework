{% extends 'base.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="{{ route('auth.register') }}" method="post">
                <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.token }}">

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control{{ errors.email ? ' is-invalid' : '' }}" placeholder="test@example.com" value="{{ old.email }}">

                    {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email|first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control{{ errors.name ? ' is-invalid' : '' }}" placeholder="John Doe" value="{{ old.name }}">

                    {% if errors.name %}
                        <div class="invalid-feedback">
                            {{ errors.name|first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}" >

                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password|first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password-confirmation">Password confirmation</label>
                    <input type="password" name="password_confirmation" id="password-confirmation" class="form-control{{ errors.password_confirmation ? ' is-invalid' : '' }}" >

                    {% if errors.password_confirmation %}
                        <div class="invalid-feedback">
                            {{ errors.password_confirmation|first }}
                        </div>
                    {% endif %}
                </div>

                <button class="btn btn-primary">Create account</button>
            </form>
        </div>
    </div>
{% endblock %}
